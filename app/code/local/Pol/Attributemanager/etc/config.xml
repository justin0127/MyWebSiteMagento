<?xml version="1.0"?>
<config>
<!-- met en marche le module et permet le support d'installation -->
    <modules>
        <Pol_Attributemanager>
            <version>0.1.0</version>
        </Pol_Attributemanager>
    </modules>
    
    <admin>
        <routers>
			<attributemanager>
				<use>admin</use>
				<args>
					<module>Pol_Attributemanager</module>
					<frontName>attributemanager</frontName>
				</args>
			</attributemanager>
        </routers>
    </admin>
    
    <frontend>
        <routers></routers>
        <events></events>
        <translate></translate>
        <layout></layout>
    </frontend>
    
    <default>
    	<config_vars></config_vars>
   	</default>
    
    <adminhtml>
		<menu>
			<system>
				<children>
					<pol> 
						<title>Manager</title>
						<sort_order>20</sort_order>           
						<children>
							<items module="attributemanager">
								<title>Manage Attributes for categories and customers</title>
								<action>attributemanager</action>
							</items>
						</children>
					</pol> 
				</children>
			</system>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Pol_Attributemanager>
							<title>Attributemanager Module</title>
							<sort_order>10</sort_order>
						</Pol_Attributemanager>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<attributemanager>
					<file>attributemanager.xml</file>
				</attributemanager>
			</updates>
		</layout>
