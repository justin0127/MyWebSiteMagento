                </connection>
            </search_write>
            <search_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </search_read>
        </resources>
        <blocks>
            <search>
                <class>Mec_Search_Block</class>
            </search>
        </blocks>
        <helpers>
            <search>
                <class>Mec_Search_Helper</class>
            </search>
