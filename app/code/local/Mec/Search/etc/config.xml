    <global>
        <models>
            <search>
                <class>Mec_Search_Model</class>
                <resourceModel>search_mysql4</resourceModel>
            </search>
            <search_mysql4>
                <class>Mec_Search_Model_Mysql4</class>
                <entities>
                    <search>
                        <table>search</table>
                    </search>
                </entities>
            </search_mysql4>
        </models>
        <resources>
            <search_setup>
                <setup>
                    <module>Mec_Search</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </search_setup>
            <search_write>
                <connection>
