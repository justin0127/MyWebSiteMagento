    jQuery(document).ready(function() {
            jQuery('#asend').click( function(){
            jQuery.blockUI({ message: jQuery('#sendtofriend'), css: {  top:  (jQuery(window).height() - 200) /2 + 'px', left: (jQuery(window).width() - 555) /2 + 'px', width: '555px' } }); 
            jQuery('#btn1').click( jQuery.unblockUI );
			jQuery('#fanhui').click( jQuery.unblockUI );
} );
    }); 
